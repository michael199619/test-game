{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/api/client/src",
  "monorepo": true,
  "root": "apps/api/client",
  "compilerOptions": {
    "webpack": true
  },
  "projects": {
    "common": {
      "type": "library",
      "root": "apps/common",
      "entryFile": "index",
      "sourceRoot": "apps/common/src",
      "compilerOptions": {
        "tsConfigPath": "apps/common/tsconfig.lib.json"
      }
    },
    "users": {
      "type": "application",
      "root": "apps/microservice/users",
      "entryFile": "main",
      "sourceRoot": "apps/microservice/users/src",
      "compilerOptions": {
        "tsConfigPath": "apps/microservice/users/tsconfig.app.json"
      }
    },
    "client": {
      "type": "application",
      "root": "apps/api/client",
      "entryFile": "main",
      "sourceRoot": "apps/api/client/src",
      "compilerOptions": {
        "tsConfigPath": "apps/api/client/tsconfig.app.json"
      }
    }
  }
}